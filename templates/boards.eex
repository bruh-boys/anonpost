              <p style="font-size: 10px;">
              preview: <%=String.slice(i["body"],0,40)%>
              </p>
            </div>
            </a>
            <% end) %>
        </div>
      </div>
    </div>
    <%end %>
  </div>


  <!--line-->
  <div>
    <div id="line"></div>
  </div>


  <div id="index"></div>
</div>
