
<link rel="stylesheet" href="/public/css/boards.css">
<link rel="stylesheet" href="/public/css/boards/index.css">
<div id="title">
<!---->
  <canvas id="board-animation" height=500></canvas>

  <script src="/public/JS/canvasAnimation.js">

  </script>
</div>


<div id="container">
  <div>
    <div id="publicate">
      <h1 align="center">publicate something</h1>

      <form action="<%=req_url%>" method="post">
        <div>
          <input type="text" name="username" placeholder="username" id="username" class="input-publ"/><br>
        </div>

        <div>
          <input type="text" name="title" placeholder="title" id="title-publication" class="input-publ" /><br>
        </div>

        <div>
          <textarea name="body" placeholder="body" class="input-publ"></textarea><br>
        </div>

        <div>
          <input type="submit" id="submit-bottom" value="submit"  /><br>
        </div>
      </form>
    </div>
  </div>


  <!--line-->
  <div>
    <div id="line"></div>
  </div>


  <!--posts-->
  <div>
    <div id="publications">
      <!-- %{
          comments: %{
            "$size" => "$comments"
          },
          title: "$title",
          username: "$username"
        }
      -->
      <%=if not Enum.empty?(publications) do%>
      <div id="post-container">
        <div id="post">
          <%= Enum.map(publications,fn i -> %>
      <a href="/post?id=<%=i["_id"]%>">
            <div class="postContainer post">
              <h1>

                  <%=i["title"]%>

              </h1>

              <h1>
                <span style="font-size: 10px;">
                username:  <%=i["username"]%>
                </span>
